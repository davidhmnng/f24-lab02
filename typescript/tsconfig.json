{
  "compilerOptions": {
    "target": "ES6",                       
    "module": "ESNext",                    // Use ESNext modules for better compatibility with ts-node and ESM
    "sourceMap": true,                     // Keep source maps enabled for debugging
    "strict": true,                        // Strict type checking
    "esModuleInterop": true,               // Enable interop between ES modules and CommonJS
    "moduleResolution": "node",            // Resolve modules using Node.js strategy
    "outDir": "./dist",                    // Output compiled files into dist directory
    "rootDir": "./src",                    // Specify root directory for TypeScript files
    "lib": ["ES6", "dom"]                  // Include ES6 and DOM libraries
  },
  "include": ["src/**/*.ts"],              // Include all TypeScript files in src directory
  "exclude": ["node_modules"]              // Exclude node_modules from compilation
}
